using System;
using System.Collections.Generic;
using System.ComponentModel;
using System.Data;
using System.Drawing;
using System.Linq;
using System.Text;
using System.Threading.Tasks;
using System.Windows.Forms;

namespace Carulasan_Activity6_Properties
{
    public partial class Form1 : Form
    {
        public Form1()
        {
            InitializeComponent();
        }

        private void btnClear_Click(object sender, EventArgs e)
        {
            txtActivity1.Clear();
            txtActivity2.Clear();
            txtFinalExam.Clear();
            txtQuiz1.Clear();
            txtQuiz2.Clear();
            txtQuiz3.Clear();
            txtQuiz4.Clear();
            txtTotal.Clear();
        }

        private void btnCompute_Click(object sender, EventArgs e)
        {

            double Quiz1, Quiz2, Quiz3, Quiz4, Activity1, Activity2, FinalExam, result;

            Quiz1 = Convert.ToDouble(txtQuiz1.Text);
            Quiz2 = Convert.ToDouble(txtQuiz2.Text);
            Quiz3 = Convert.ToDouble(txtQuiz3.Text);
            Quiz4 = Convert.ToDouble(txtQuiz4.Text);
            Activity1 = Convert.ToDouble(txtActivity1.Text);
            Activity2 = Convert.ToDouble(txtActivity2.Text);
            FinalExam = Convert.ToDouble(txtFinalExam.Text);

            result = (Quiz1 + Quiz2 + Quiz3 + Quiz4) / 4 + (Activity1 + Activity2) / 2 + (FinalExam) / 7;

            txtTotal.Text = result.ToString();
            
        }
    }
}
